---
interface Props {
  title: string;
  body: string;
  href?: string;
}

const { title, body, href } = Astro.props;
---

<div class="question-card">
  <a href={href} id="linkyLink">
    <h2>
      {title}
    </h2>
  </a>
  <p>
    {body}
  </p>
</div>

<style>
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  .question-card {
    position: relative;
    width: 320px;
    height: 320px;
    border: 1px solid aliceblue;
    border-bottom: 2px solid rgba(var(--accent));
    overflow: hidden;
    border-radius: 10px;
    /* width: 100%; */
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    color: white;
    background-color: #23262d;
    opacity: 0.8;
    /* transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1); */
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .question-card h2 {
    text-align: left;
    background: linear-gradient(to right, #558296, #00567750);
    padding: 10px;
    border-radius: 7px;
  }
  .question-card p {
    position: relative;
    /* z-index: 0; */
    margin: 10px;
    font-size: 1rem;
    text-align: right;
    padding-top: 20px;
    color: white;
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .question-card a {
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .question-card::hover h2 {
    color: rgb(var(--accent-light));
  }
</style>
