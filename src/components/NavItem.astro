---
interface Props {
  title: string;
  href: string;
}
const { title, href } = Astro.props;
---

<li class="nav-link">
  <a href={href}>
    <p>{title}</p>
  </a>
</li>

<style>
  .nav-link {
    list-style: none;
    display: flex;
    padding: 5px;
    background: radial-gradient(circle, lightgrey, black);
    background-size: cover;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow:
      25px 25px 75px rgba(0, 0, 0, 0.25),
      10px 10px 70px rgba(0, 0, 0, 0.25),
      inset 0 0 0 1px rgba(255, 255, 255, 0.1),
      inset 5px 5px 10px rgba(0, 0, 0, 0.5),
      inset 5px 5px 20px rgba(255, 255, 255, 0.2),
      inset -5px -5px 15px rgba(0, 0, 0, 0.75);
  }
  .nav-link > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  .nav-link p {
    /* margin: 0; */
    font-size: 1rem;
    font-weight: 500;
    padding: 10px;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow:
      0 0 5px #000000,
      0 0 10px #00000090,
      0 0 20px #00000080,
      0 0 30px #00000070,
      0 0 40px #00000060,
      0 0 50px #00000050;
  }
  .nav-link p:hover {
    color: rgb(var(--accent-dark));
    transform: scale(1.1);
  }
  .nav-link:is(:hover, :focus-within) {
    background-image: var(--accent-gradient);
    box-shadow: 0 0 0 1px rgba(213, 202, 158, 0.1);
  }
  .nav-link:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-dark));
  }
</style>
